<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/btnShareReceipt"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_48"
            android:layout_marginEnd="@dimen/dimen_40"
            motion:layout_constraintTop_toBottomOf="@+id/summaryItemSecurityAuthentication"
            android:layout_marginStart="@dimen/dimen_40"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_64" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btnShareReceipt"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_48"
            android:layout_marginEnd="@dimen/dimen_40"
            motion:layout_constraintTop_toBottomOf="@+id/summaryItemSecurityAuthentication"
            android:layout_marginStart="@dimen/dimen_40"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_64"
            android:rotationX="288" />
    </ConstraintSet>
</MotionScene>